<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorChat"
    tools:context="com.zender.piramidaupp.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/chat_user_avatar" />

    <TextView
        android:id="@+id/settings_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/settings_name"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/settings_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_status"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/settings_change_avatar_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settings_image"
        android:layout_alignStart="@+id/settings_image"
        android:layout_below="@+id/settings_status"
        android:layout_marginTop="95dp"
        android:text="Изменить аватар" />

    <Button
        android:id="@+id/settings_change_status_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settings_change_avatar_btn"
        android:layout_alignStart="@+id/settings_change_avatar_btn"
        android:layout_below="@+id/settings_change_avatar_btn"
        android:text="Изменить статус" />

</RelativeLayout>
